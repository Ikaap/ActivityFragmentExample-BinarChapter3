<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/avengerList">

    <fragment
        android:id="@+id/avengerList"
        android:name="com.ikapurwanti.activityfragmentexample.presentation.avengerlist.AvengerListFragment"
        android:label="avenger_list"
        tools:layout="@layout/fragment_avenger_list" >
        <action
            android:id="@+id/navigateToDetail"
            app:destination="@id/fragmentTwo2" />
    </fragment>
    <fragment
        android:id="@+id/fragmentTwo2"
        android:name="com.ikapurwanti.activityfragmentexample.presentation.fragmenttwo.FragmentTwo"
        android:label="fragment_two"
        tools:layout="@layout/fragment_two" >
        <action
            android:id="@+id/action_fragmentTwo2_to_fragmentThree2"
            app:destination="@id/fragmentThree2" />
        <argument
            android:name="person"
            app:argType="com.ikapurwanti.activityfragmentexample.model.Person"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/fragmentThree2"
        android:name="com.ikapurwanti.activityfragmentexample.presentation.fragmentthree.FragmentThree"
        android:label="FragmentThree" />

</navigation>